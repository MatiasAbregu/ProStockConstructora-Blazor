@inject DatosSesion datosUsuario;
@inject NavigationManager navManager;

<div class="top-row navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href=""> <img src="LogoPSC.png" /> ProStock</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="nav bg-dark flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="notadepedidos">
                <i class="bi bi-people-fill"></i> Notas de Pedidos
            </NavLink>

            @if(datosUsuario.Usuario != null)
            {
                <NavLink class="nav-link cerrarsesion" @onclick="CerrarSesion">
                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                </NavLink>
                <NavLink class="nav-link" href="/recursos">
                    <i class="bi bi-tools"></i> Recursos
                </NavLink>
                @if (datosUsuario.Usuario.Roles.Contains("ADMINISTRADOR")
                            || datosUsuario.Usuario.Roles.Contains("JEFEDEOBRA"))
                {
                    <NavLink class="nav-link" href="obras">
                        <i class="bi bi-building-fill"></i> Obras
                    </NavLink>
                }
                else if (datosUsuario.Usuario.Roles.Contains("JEFEDEDEPOSITO"))
                {
                    <NavLink class="nav-link" href="/obras/depositos">
                        <i class="bi bi-houses"></i> Depósitos
                    </NavLink>
                }
                @if (datosUsuario.Usuario.Roles.Contains("ADMINISTRADOR"))
                {
                    <NavLink class="nav-link" href="usuarios">
                        <i class="bi bi-people-fill"></i> Usuarios
                    </NavLink>
                }
            }
        </div>
    </nav>
</div>

@code {
    protected override void OnInitialized()
    {
        datosUsuario.OnChange += StateHasChanged;
    }

    private void CerrarSesion()
    {
        datosUsuario.LimpiarDatos();
        navManager.NavigateTo("/");
    }
}