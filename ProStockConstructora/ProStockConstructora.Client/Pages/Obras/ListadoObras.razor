		// }
	}

	private async Task SiguientePagina()
	{
		if (Obras.Count > numeroPagina * 10)
		{
			numeroPagina++;
			StateHasChanged();
		}
	}

	private async Task AnteriorPagina()
	{
		if (numeroPagina > 1)
		{
			numeroPagina--;
			StateHasChanged();
		}
	}
}