@page "/remitos/crear"
@inject IHttpServicio Http
@inject NavigationManager Navigation
@inject DatosSesion Sesion

<PageTitle>Crear Remito - ProStockConstructora</PageTitle>

@if (Sesion.Usuario != null &&
(Sesion.Usuario.Roles.Contains("ADMINISTRADOR") || Sesion.Usuario.Roles.Contains("JEFEDEDEPOSITO")))
{
    <article class="p-4">
        <div class="cabecera">
            <p class="fw-bolder">Notas de pedido (Detalles)</p>
            <a class="btn btn-secondary" href=@($"/obras/{ObraId}/depositos/{DepositoId}/notadepedido/{NotaDePedidoId}/remitos")>
            <i class="fas fa-arrow-circle-left"></i>&ensp;
            Atrás
        </a>
    </div>
    <div class="card p-3">
        @if (!string.IsNullOrEmpty(Mensaje))
            {
                <div class="alert alert-danger" role="alert">
                    @Mensaje
                </div>
            }
            <div class="my-3 px-4">
                <label class="form-label">Número Nota de Pedido:</label>
                <input value="@remito.NumeroNotaPedido" type="text" class="form-control" disabled />
            </div>
            @if (nota != null)
            {
                <div class="my-3 px-4">
                    <label class="form-label">Deposito que genera el remito:</label>
                    <input value="@NotaDePedidoId." type="text" class="form-control" disabled />
                </div>
                <h5>Detalle:</h5>
                @foreach (var renglon in nota.Detalles)
                {
                    <div class="my-3 px-4 card d-flex flex-row flex-nowrap align-items-center">
                        @if (DepositoId != null && DepositoId != 0 && renglon.DepositoId == DepositoId)
                        {
                            <div class="flex-grow-1 my-3 px-4">
                                <label class="form-label">Recurso que se enviara:</label>
                                <input value="@renglon.Recurso" class="form-control" type="text" disabled />
                            </div>
                            <div class="my-3 px-4">
                                <label class="form-label">Cantidad solicitada:</label>
                                <input value="@renglon.Cantidad" class="form-control" type="number" disabled />
                            </div>
                            <div class="my-3 px-4">
                                <label class="form-label">Cantidad ya enviada:</label>
                                <input value="@renglon.Cantidad" class="form-control" type="number" disabled />
                            </div>
                            <div class="my-3 px-4">
                                <label class="form-label">Cantidad a enviar:</label>
                                <input value="@renglon.Cantidad" class="form-control" type="number" />
                            </div>
                        }
                        
                    </div>
                }
                <button class="btn btn-success my-2 btn-submit" type="button" @onclick="">
                    <i class="bi bi-check-lg me-1"></i> Guardar cambios
                </button>
            }
        </div>
    </article>
}
else
{
    Navigation.NavigateTo("/");
}


@code {
    [Parameter]
    public long ObraId{ get; set; }
    [Parameter]
    public long DepositoId { get; set; }
    [Parameter]
    public long NotaDePedidoId { get; set; }


    private string Mensaje;
   
}
