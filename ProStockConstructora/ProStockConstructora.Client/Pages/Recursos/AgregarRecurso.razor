@page "/recursos/agregar-recurso"
@inject IHttpServicio http
@inject NavigationManager navManager
@inject DatosSesion datosSesion

<PageTitle>Agregar Recurso - ProStockConstructora</PageTitle>

@if (datosSesion.Usuario != null)
{
    <article class="p-4 container">
        <h3 class="fw-bold text-primary mb-4">Agregar Recurso</h3>      
        <EditForm Model="@recurso" OnValidSubmit="@CrearRecurso">
            <DataAnnotationsValidator />
    
            <!-- Campo Código ISO -->
            <div class="mb-3">
                <label class="form-label">Código ISO</label>
                <InputText class="form-control" @bind-Value="recurso.CodigoISO" />
                <ValidationMessage For="@(() => recurso.CodigoISO)" />
            </div>
    
            <!-- Campo Nombre -->
            <div class="mb-3">
                <label class="form-label">Nombre del Recurso</label>
                <InputText class="form-control" @bind-Value="recurso.Nombre" />
                <ValidationMessage For="@(() => recurso.Nombre)" />
            </div>
    
            <!-- Campo Unidad de Medida -->
            <div class="mb-3">
                <label class="form-label">Unidad de Medida</label>
                <InputSelect class="form-select" @bind-Value="recurso.UnidadDeMedidaId">
                   <option value="">-- Selecciona una unidad --</option>
                    @foreach (var unidad in listadoUnidadDeMedida)
                    {
                        <option value="@unidad.Id">@unidad.Nombre</option>
                    }
                </InputSelect>
            </div>

            <div class="mb-3">
                <label class="form-label">Cantidad</label>
                <InputNumber class="form-control" @bind-Value="recurso.Cantidad">
                    <ValidationMessage For="@(() => recurso.Cantidad)" />
                </InputNumber>
            </div>
    
            <div class="mb-3">
                <label class="form-label">Tipo de Material</label>
                <InputSelect class="form-control" @bind-Value="recurso.TipoMaterialId">
                    <option value="">-- Selecciona un tipo --</option>
                    @foreach (var tipo in listadoTipoMaterial)
                    {
                        <option value="@tipo.Id">@tipo.Nombre</option>
                    }
                </InputSelect>
            </div>
    
            <!-- Botones -->
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle me-1"></i> Crear
                </button>
                <button type="button" class="btn btn-secondary" @onclick="Volver">
                    <i class="bi bi-arrow-left-circle me-1"></i> Volver
                </button>
            </div>
        </EditForm>
    </article>
}

@code {
    private DatosUsuario usuario = new();
    private RecursosCargarDTO recurso = new();
    private List<TipoMaterialDTO> listadoTipoMaterial = new();
    private List<UnidadDeMedidaDTO> listadoUnidadDeMedida = new();
    private string Mensaje = string.Empty;
    private long IdMarca = 0;
    private bool Autenticado = true;

    protected override async Task OnInitializedAsync()
    {
        await base.OnInitializedAsync();
        if (datosSesion.Usuario != null)
        {
            usuario = datosSesion.Usuario;
            await TraerTipoMaterial(usuario.EmpresaId);
            await TraerUnidadDeMedida(usuario.EmpresaId);
        }
        else Autenticado = false;
    }

    private async Task CrearRecurso()
    {
       recurso.EmpresaId = usuario.EmpresaId;
         var res = await http.Post<RecursosCargarDTO, Response<string>>($"api/recursos/crear-recurso/{usuario.EmpresaId}", recurso);
       if (res.Respuesta != null)
       {                   
           Mensaje = res.Respuesta.Mensaje.Contains("exito") ? string.Empty : res.Respuesta.Mensaje;
           recurso = new();
           StateHasChanged();                    
       }
       else
       {
           Mensaje = "Error al crear el recurso. Intente nuevamente.";
       }
    }

    private async Task TraerTipoMaterial(long id)
    {
        var res = await http.Get<Response<List<TipoMaterialDTO>>>($"api/tipo-material/{id}");
        if (res.Respuesta != null)
        {
            listadoTipoMaterial = res.Respuesta.Objeto;
            StateHasChanged();
        }
    }

    private async Task TraerUnidadDeMedida(long id)
    {
        var res = await http.Get<Response<List<UnidadDeMedidaDTO>>>($"api/unidad-medida/empresa/{id}");
        if (res.Respuesta != null)
        {
            listadoUnidadDeMedida = res.Respuesta.Objeto;
            StateHasChanged();
        }
    }

    private void Volver() => navManager.NavigateTo("/recursos");

    private async Task MostrarAlerta(string mensaje)
    {
        await Task.Run(() => Console.WriteLine(mensaje));
    }
}
